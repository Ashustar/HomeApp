<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/pref_devices">

        <Preference
            android:key="devices"
            android:summary="@string/pref_edit_summary"
            android:title="@string/pref_edit" />
        <SwitchPreference
            android:defaultValue="false"
            android:enabled="false"
            android:key="other_devices"
            android:summary="@string/pref_other_summary"
            android:title="@string/pref_other" />
        <EditTextPreference
            android:defaultValue='{"devices":{"null":"null"}}'
            android:key="devices_json"
            android:summary="@string/pref_edit_text_summary"
            android:title="@string/pref_edit_text" />
    </PreferenceCategory>
</PreferenceScreen>
